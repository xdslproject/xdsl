AddArguments{
    background: rgba(100,100,100,0.5);
    align: center middle;
    layout: vertical;
}

# ScrollableContainer(TextArea, Horizontal(Button, Button, Button))
#container{
    border: heavy $warning;
    border-title-color: $warning;
    border-title-style: bold;
    border-title-align: center;
    width: 85%;
    height: 50%;
    layout: vertical;
}

# TextArea
#argument_text_area{
    border: heavy $accent-darken-1;
    border-title-color: $error-darken-3;
    border-title-style: bold;
    border-title-align: center;
}

# Horizontal(Button, Button, Button)
#cancel_enter_buttons{
    layout: horizontal;
    height: auto;
}

Button{
    border: $warning;
}
